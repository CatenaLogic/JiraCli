<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>net47</TargetFrameworks>
    <AssemblyName>JiraCli</AssemblyName>
    <RootNamespace>JiraCli</RootNamespace>
    <DefaultLanguage>en-US</DefaultLanguage>
    <PackageId>JiraCli</PackageId>
    <PackageVersion>1.0.0-alpha0001</PackageVersion>
    <Description>JIRA command line interface.</Description>
    <PackageTags>jira;command;line;interface;cli</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <UseWpf>false</UseWpf>
    <UseWindowsForms>false</UseWindowsForms>
    <ExtrasEnableImplicitWpfReferences>false</ExtrasEnableImplicitWpfReferences>
    <ExtrasEnableImplicitWinFormsReferences>false</ExtrasEnableImplicitWinFormsReferences>
  </PropertyGroup>

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <StartupObject />
    <NoWarn>$(NoWarn);SA1652</NoWarn>
    <ApplicationIcon>Resources\Icons\Logo.ico</ApplicationIcon>
  </PropertyGroup>

  <PropertyGroup>
    <!-- SonarQube requires a project guid -->
    <ProjectGuid>D8F78D76-3A8A-4E87-B0FA-B3F603964F03</ProjectGuid>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Atlassian.SDK" Version="12.1.1" PrivateAssets="all" />
    <PackageReference Include="Catel.Core" Version="5.12.8" PrivateAssets="all" />
    <PackageReference Include="Catel.Fody" Version="4.5.0" PrivateAssets="all" />
    <PackageReference Include="Costura.Fody" Version="4.1.0" PrivateAssets="all" />
    <PackageReference Include="Fody" Version="6.2.4" PrivateAssets="all">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="LoadAssembliesOnStartup.Fody" Version="4.5.0" PrivateAssets="all" />
    <PackageReference Include="ModuleInit.Fody" Version="2.1.1" PrivateAssets="all" />
    <PackageReference Include="Obsolete.Fody" Version="5.2.1" PrivateAssets="all" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" PrivateAssets="all" />
    <PackageReference Include="RestSharp" Version="106.11.4" PrivateAssets="all" />
    <PackageReference Include="semver" Version="2.0.6" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="NETStandard.Library" Version="2.0.3" />
  </ItemGroup>

  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props')" />
  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props')" />
</Project>